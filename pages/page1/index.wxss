.page-1 {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  border: 3px solid #000;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.heider {
  width: 100%;
  height: 49px;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}
.main {
  width: 100%;
  flex: 1;
  background-color: #ff0;
}
.h-item {
  height: 100%;
  text-align: center;
  line-height: 49px;
}
.h-l,.h-r {
  width: 160rpx;
  background-color: #0f0;
  flex-shrink: 0;
}
.h-m {
  flex: 1;
  background-color: #ff0;
}
.banner-item {
  width: 100%;
}
.movableArea {
  width: 400rpx;
  height: 400rpx;
  background-color: #ccc;
}
.movableView {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
}